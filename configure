#!/bin/sh
#
#
UNAME=uname
case `${UNAME} -a` in
  *MINGW* | *CYGWIN* )
  	  echo "Windows platform... using .buildinfo.win32"
  	  cp sqlite.buildinfo.win32 sqlite.buildinfo
	  ;;
  *)
  	  echo "UNIXy platform... using .buildinfo.unix"
  	  cp sqlite.buildinfo.unix sqlite.buildinfo.in

      # subst standard header path variables
      if test -n "$CPPFLAGS" ; then
  	      echo "Found CPPFLAGS in environment: '$CPPFLAGS'"
          sed 's,@CPPFLAGS@,'$CPPFLAGS',g' < sqlite.buildinfo.in > sqlite.buildinfo
      else
          cp sqlite.buildinfo.in sqlite.buildinfo
      fi
      rm sqlite.buildinfo.in
	  ;;
esac

